<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/rounded_textview2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/asset1"/>

    <TextView
        android:layout_width="70sp"
        android:layout_height="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/asset1"
        android:background="@drawable/rounded_textview"
        android:layout_marginLeft="18sp"
        android:layout_marginBottom="10sp"
        android:id="@+id/asset2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13\nApril"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/asset2"
        app:layout_constraintTop_toTopOf="@id/asset2"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="8sp"
        android:id="@+id/pdf_date"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PDF Name"
        android:textSize="15sp"
        android:id="@+id/pdf_name"
        app:layout_constraintLeft_toRightOf="@id/asset2"
        app:layout_constraintTop_toTopOf="@id/asset1"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="9sp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Total Questions"
        android:textSize="13sp"
        android:id="@+id/pdf_questions"
        app:layout_constraintLeft_toRightOf="@id/asset2"
        app:layout_constraintTop_toBottomOf="@id/pdf_name"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="5sp"
        android:textColor="#ff0000"/>

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/arrow_pdf"
        app:layout_constraintRight_toRightOf="@id/asset1"
        app:layout_constraintTop_toTopOf="@id/asset1"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:id="@+id/view_pdf"/>


</androidx.constraintlayout.widget.ConstraintLayout>