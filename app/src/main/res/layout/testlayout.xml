<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/test_symbol"
        android:src="@drawable/test_symbol"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Name"
        android:id="@+id/test_name"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/test_symbol"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Date"
        android:id="@+id/test_date"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/test_symbol"
        app:layout_constraintTop_toBottomOf="@id/test_name"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="5sp"/>

    <ImageView
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:id="@+id/start_test1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25sp"
        android:layout_marginRight="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>